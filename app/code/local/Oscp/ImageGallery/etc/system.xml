<!-- Image Gallery Configuration: Image, template setting -->
<config>
    <sections>
        <imagegallery translate="label" module="imagegallery">
            <label>Image Gallery Configuration</label>
            <tab>general</tab>
            <frontend_type>text</frontend_type>
            <sort_order>999</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <!-- Gallery Setting -->
                <settings translate="label">
                    <label>Gallery Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <is_enable_gallery translate="label, comment">
                            <label>Enable Gallery</label>
                            <comment><![CDATA[Enable Gallery]]></comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </is_enable_gallery>  
                        <thumb_size translate="label, comment">
                            <label>Thumbnail Image Size </label>
                            <comment><![CDATA[width-height in Px]]></comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>6</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </thumb_size>
                        <!--  <photo_per_page translate="label, comment">
                                <label>Photo Per Page Allowed</label>
                                <comment><![CDATA[in comma seperated number]]></comment>
                                <frontend_type>text</frontend_type>
                                <sort_order>6</sort_order>
                                <show_in_default>1</show_in_default>
                                <show_in_website>1</show_in_website>
                                <show_in_store>1</show_in_store>
                        </photo_per_page> -->
                        <!--  <photo_per_page_default translate="label, comment">
                                <label>Photo Per Page Default</label>
                                <comment><![CDATA[ Default Photo Per Page]]></comment>
                                <frontend_type>text</frontend_type>
                                <sort_order>5</sort_order>
                                <show_in_default>1</show_in_default>
                                <show_in_website>1</show_in_website>
                                <show_in_store>1</show_in_store>
                        </photo_per_page_default> -->
                        <photo_size_in_slide_show translate="label, comment">
                            <label>Large/Photo Size In Slide Show</label>
                            <comment><![CDATA[ Default Photo size in slide show (width-height)]]></comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </photo_size_in_slide_show>
                        <is_show_photo_title translate="label, comment">
                            <label>Show Photo Title</label>
                            <comment><![CDATA[Enable Photo Title]]></comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </is_show_photo_title>  
                        <is_show_photo_description translate="label, comment">
                            <label>Show Photo Description</label>
                            <comment><![CDATA[Enable Photo Description]]></comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </is_show_photo_description>
                        <description_length translate="label, comment">
                            <label>Description Length (Maximum) In Banner</label>
                            <comment><![CDATA[ If description is too long ]]></comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </description_length>
						<max_item_display translate="label, comment">
                            <label>Maximum Item Display</label>
                            <!-- <comment><![CDATA[ If description is too long ]]></comment> -->
                            <frontend_type>text</frontend_type>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </max_item_display>
                        <!--  <image_in_row translate="label, comment">
                                <label>Total Images in One Row</label>
                                <comment><![CDATA[For Row]]></comment>
                                <frontend_type>select</frontend_type>
                                <source_model>imagegallery/system_config_source_galleryimagesinrow</source_model>
                                <sort_order>7</sort_order>
                                <show_in_default>1</show_in_default>
                                <show_in_website>1</show_in_website>
                                <show_in_store>1</show_in_store>
                        </image_in_row> -->
                    </fields>
                </settings>     
                <!-- END Gallery Setting -->

                <!-- Gallery Template Setting -->
                <imagegallery_template translate="label" module="imagegallery">
                    <label>Gallery Template Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>2</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <gallery_style translate="label, comment">
                            <label>Gallery Style</label>
                            <comment><![CDATA[Gallery Style]]></comment>
                            <frontend_type>select</frontend_type>
                            <source_model>imagegallery/system_config_source_gallerystyleoptions</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </gallery_style>  
                        <gallery_effect translate="label, comment">
                            <label>Gallery Effect</label>
                            <comment><![CDATA[NOTE: Auto Slide and Fadding/Faddout effect will be applicable for only Style 3]]></comment>
                            <frontend_type>select</frontend_type>
                            <source_model>imagegallery/system_config_source_galleryeffectoptions</source_model>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </gallery_effect> 
                        <interval translate="label, comment">
                            <label>Time Interval</label>
                            <comment><![CDATA[NOTE: Time interval Between Two Images In Second]]></comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </interval>
                    </fields>
                </imagegallery_template>
                <!-- END Gallery Template Setting -->

            </groups>
        </imagegallery>
    </sections>
</config>