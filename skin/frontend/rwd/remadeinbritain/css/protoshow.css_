.protoshow, .protoshow .show {position: relative;margin: 0 0 25px;padding: 0;list-style: none;width: 613px;height: 468px;float:left;border: 1px solid #d8d9d9;z-index:1;}
.slide {position: absolute;top: 0;left: 0;z-index: 90;height: 100%;display:none;}
.active-slide {z-index: 100;display: block;}
.protoshow .slide-caption {position: absolute;left: 0;bottom: 0;right: 0;z-index: 100;padding: 1em 10px;background-color: #000;background-color: rgba(0,0,0,.4);color:#fff;}
.proto-progress-timer {position: absolute;top: 7px;right: 7px;z-index: 9999;}

/* TRANSITION SLIDE ------------------------------------------------*/
.transition-slide .show-window {overflow: hidden;position: relative;}
.transition-slide .show {position: absolute;top: 0;left: 0px !important;width: 100%;}
.transition-slide .slide {float: left;}

/* PROTO CONTROLS ------------------------------------------------*/
.proto-controls, .proto-navigation {margin: 0;padding: 0;list-style: none;}
.proto-controls a:link,.proto-controls a:visited,.proto-navigation a:link,.proto-navigation a:visited {display: block;text-indent: -9999px;overflow: hidden;}
.proto-controls li {position: absolute;top: 50%;margin-top: -36px;left: 10px;width: 10%;height: 28%;z-index: 110;}
.proto-controls .forward {right: 10px;left: auto;}
.proto-controls a {width: 100%;height: 61px;background: url(images/proto_controls_bg.png) no-repeat 0 0;opacity: 0.2;-moz-opacity: 0.2;filter:alpha(opacity=20);}
.proto-controls a:hover,.proto-controls a:focus {opacity: 1;-moz-opacity: 1;filter:alpha(opacity=100);}
.proto-controls .forward a {background-position: 100% -90px;}

/* PROTO NAVIGATION ------------------------------------------------*/
.proto-navigation {position: absolute;top: 0;right: 50%;float: right;z-index: 120;}
.proto-navigation li {float: left;left: 50%;padding: 12px 6px;position: relative;}
.proto-navigation a {background-color: #fff;background-color: rgba(0,0,0,.2);height: 8px;text-decoration: none; width: 8px;
-moz-border-radius:30px;-webkit-border-radius:30px;border-radius:30px;-moz-box-shadow:    inset 0 1px 0 1px rgba(0,0,0,.1);
-webkit-box-shadow:    inset 0 1px 0 1px rgba(0,0,0,.1);box-shadow:    inset 0 1px 0 1px rgba(0,0,0,.1);}
.proto-navigation a:hover,.proto-navigation a:focus {background-color: #999;}
.proto-navigation .current-slide a {background-color: #363F4E;}

@media only screen and (min-width: 230px) and (max-width: 479px) {
.protoshow{height:100%;}
.transition-slide .show{height:100% !important;}
}

@media only screen and (min-width: 230px) and (max-width: 850px) {
 .protoshow{width:99.4%;}   
 .transition-slide .show-window{width:100% !important;height:100% !important;}
 .protoshow  .slide img{width:100%;background-size: cover;height:100%;}
 .transition-slide .slide{width:100%;height:100%;}
}